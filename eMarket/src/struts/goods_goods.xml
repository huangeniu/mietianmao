<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	
    <package name="tbl_goods" namespace="/goods" extends="struts-default">
		
		<action name="addgoods" method="addgoods" class="com.mz2b.os.action.GoodsAction">
			<result>/jsp/manage/goods/add.jsp</result>
		</action>

		<action name="addgoodsprocess" method="addgoodsprocess" class="com.mz2b.os.action.GoodsAction">
			<result type="redirect">/goods/searchgoods.action</result>
		</action>

		<action name="viewgoods" method="viewgoods" class="com.mz2b.os.action.GoodsAction">
			<result>/jsp/manage/goods/view.jsp</result>
		</action>

		<action name="editgoods" method="editgoods" class="com.mz2b.os.action.GoodsAction">
			<result>/jsp/manage/goods/edit.jsp</result>
		</action>

		<action name="editgoodsprocess" method="editgoodsprocess" class="com.mz2b.os.action.GoodsAction">
			<result  type="redirect">/goods/searchgoods.action</result>
		</action>
		
		<action name="searchgoods" method="searchgoods" class="com.mz2b.os.action.GoodsAction">
			<result>/jsp/manage/goods/list.jsp</result>
		</action>	
			
		<action name="portalviewgoods" method="portalviewgoods" class="com.mz2b.os.action.GoodsAction">
			<result>/jsp/manage/goods/add.jsp</result>
		</action>
		
		<action name="portaleditgoods" method="portaleditgoods" class="com.mz2b.os.action.GoodsAction">
			<result>/jsp/manage/goods/add.jsp</result>
		</action>
		
		<action name="portaleditgoodsprocess" method="portaleditgoodsprocess" class="com.mz2b.os.action.GoodsAction">
			<result>/jsp/manage/goods/add.jsp</result>
		</action>
		
		<action name="deletegoods" method="deletegoods" class="com.mz2b.os.action.GoodsAction">
			<result  type="redirect">/goods/searchgoods.action</result>
		</action>								
    </package>

</struts>
